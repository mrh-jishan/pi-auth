#:kivy 1.8.0

RootWidget:
    # import container
    container: container

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 6

        # bottom-left part:
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 10]
            spacing: 6

            Label:
                text:"Register to the system"
                pos:0,0
                font_size:40

            Label:
                text: "User Type"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
            BoxLayout:
                rows: 1

                size:200,45
                size_hint: 1, None
                ToggleButton:
                    text:'Students'
                    id: role
                    on_press: role.text = 'students'
                    size_hint: 1, None
                    group: 'role'
                    pos:600,425
                    size:200,45


                ToggleButton:
                    text:'Lecturer'
                    pos:600,425
                    id: role
                    on_press: role.text = 'lecturer'
                    size:200,45
                    size_hint: 1, None
                    group: 'role'
                    state: 'down'

            Label:
                text: "Enter Full Name"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]

            TextInput:
                multiline:False
                pos:600,425
                size:200,45
                font_size:20
                id:name
                size_hint: (1, None)

            Label:
                text: "Enter email"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
            TextInput:
                multiline:False
                pos:600,425
                size:200,45
                font_size:20
                id:email
                size_hint: (1, None)

            Button:
                text:"Register"
                size:100,50
                pos:600,250
                size_hint: (1, None)
                on_press:app.registerStudents(email.text,name.text, role.text)
            Button:
                text:"Go Back"
                size:100,50
                pos:600,250
                size_hint: (1, None)
                on_press:app.changeUI('kv/root.kv')

            BoxLayout:
                id: container