#:kivy 1.8.0

RootWidget:
    # import container
    container: container

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 6

        # bottom-left part:
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 10]
            spacing: 6
            
            Label: 
                text:"Welcome to biometrics attendance system" 
                pos:600,600 
                font_size:40
            Label:
                text: "Fingerprint UUID"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
            TextInput:
                multiline:False 
                pos:600,425
                readonly: True
                size:200,45 
                font_size:20 
                id:uuid
                size_hint: (1, None)
            Button: 
                text:"Scan Fingerprint to login"
                size:100,50 
                pos:600,250
                size_hint: (1, None)
                on_press:app.login(uuid)
#            Button:
#                text:"Register"
#                size:100,50
#                pos:600,250
#                size_hint: (1, None)
#                on_press:app.changeUI('kv/fingerprint.kv')

            BoxLayout:
                id: container