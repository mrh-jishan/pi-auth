#:kivy 1.8.0

RootWidget:
    # import container
    container: container

    BoxLayout:
        orientation: 'vertical'
        padding: 0
        spacing: 6

        # bottom-left part:
        BoxLayout:
            orientation: 'vertical'
            padding: [10, 10]
            spacing: 6

            Label:
                text:"Enter your fingerprint"
                pos:0,0
                font_size:40

            Label:
                text: "Your fingerprint UUID"
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]

            TextInput:
                multiline:False
                pos:600,425
                size:200,45
                font_size:20
                id:name
                readonly:True
                size_hint: (1, None)


            Button:
                text:"Scan Fingerprint"
                size:100,50
                pos:600,250
                size_hint: (1, None)
                on_press:app.enroll(name)

            Button:
                text:"GO BACK"
                size:100,50
                pos:600,250
                size_hint: (1, None)
                on_press:app.changeUI('kv/home.kv')


            BoxLayout:
                id: container